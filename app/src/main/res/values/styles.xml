<resources>


    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <!-- Make the status bar traslucent -->
    <style name="AppTheme" parent="AppTheme.Base">

    <!-- This is the color of the Toolbar -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <!-- This is the color of the Status bar -->
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>
    <style name="Theme_AudioDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="chat_item_send_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="chat_text_date_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:textColor">#555756</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="msg_text_style">
        <item name="android:maxWidth">225dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textColor">@color/chat_text_color</item>
    </style>

    <style name="chat_item_sender_avatar_style">
        <item name="android:layout_width">@dimen/chat_avatar_size</item>
        <item name="android:layout_height">@dimen/chat_avatar_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:src">@drawable/ic_test_avater</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="chat_item_receive_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="chat_item_receiver_avatar_style">
        <item name="android:layout_width">@dimen/chat_avatar_size</item>
        <item name="android:layout_height">@dimen/chat_avatar_size</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:src">@drawable/ic_test_avater</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="chat_display_name_style">
        <item name="android:ems">5</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#545454</item>
        <item name="android:textSize">10sp</item>
        <item name="android:visibility">gone</item>


    </style>

    <style name="MeItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">@drawable/list_item_bg</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal </item>
    </style>
    <style name="MeItemLeftStyle">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
    </style>
    <style name="MeItemRightStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="MeInfoItemContent">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">right</item>
        <item name="android:singleLine">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#808080</item>
    </style>
    <style name="info_left_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>
