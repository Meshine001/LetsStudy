<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app ="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.meshine.letsstudyclient.widget.TopBarView
        android:id="@+id/id_contacts_topbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/topbar_height"
        android:background="@color/colorPrimary"
        app:rightSrc="@drawable/ic_add_user"
        app:isShowRight="true"
        app:isShowLeft="false"
        app:isShowWarn="false"
        app:centerText="@string/tab2_string"/>
    <ListView
        android:id="@+id/id_contacts_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</LinearLayout>
