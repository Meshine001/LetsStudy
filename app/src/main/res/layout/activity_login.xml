<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/id_login_center"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <EditText
            android:id="@+id/id_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="账号"/>
        <EditText
            android:id="@+id/id_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="密码"/>
        <Button
            android:id="@+id/id_login_sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="登入"/>
        <TextView
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:id="@+id/id_login_sign_up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="注册"/>
    </LinearLayout>
    <ImageView
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"
        android:layout_above="@+id/id_login_center"/>

    <LinearLayout
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/id_login_wechat"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_we_chat"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微信登入"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/id_login_qq"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_qq"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ登入"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:layout_gravity="center_horizontal"
                android:id="@+id/id_login_xin_lang"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_xin_lang"/>
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="微博登入"/>
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>
