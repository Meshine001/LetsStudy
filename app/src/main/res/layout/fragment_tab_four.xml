<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:padding="30dp">

        <com.meshine.letsstudyclient.widget.CircleImageView
            android:id="@+id/id_me_avatar"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/selector_tab1"
            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp" />
        <TextView
            android:id="@+id/id_me_nickname"
            android:layout_margin="@dimen/widget_margin"
            android:gravity="center"
            android:layout_below="@id/id_me_avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="小明小明明小帅"
            android:textColor="@color/white"/>
        <LinearLayout
            android:layout_below="@id/id_me_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="关注 2"
                android:textColor="@color/white"/>
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="粉丝 1"
                android:textColor="@color/white"/>
            <TextView
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="活动次数 100"
                android:textColor="@color/white"/>

        </LinearLayout>


    </RelativeLayout>
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewAbout"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_about" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textSize="20sp"
            android:text="意见反馈"
            android:layout_toRightOf="@+id/imageViewAbout" />

    </LinearLayout>

</LinearLayout>
