<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/id_item_info_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:src="@drawable/selector_tab1" />
        <TextView
            android:id="@+id/id_item_info_title"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/id_item_info_avatar"
            android:text="标题"
            android:textSize="20sp" />

          <TextView
              android:id="@+id/id_item_info_details"
              android:layout_marginTop="15dp"
              android:layout_marginLeft="10dp"
              android:layout_toRightOf="@id/id_item_info_avatar"
              android:layout_below="@id/id_item_info_title"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="内容..."/>
    </RelativeLayout>


</LinearLayout>