<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.meshine.letsstudyclient.widget.CircleImageView
        android:id="@+id/id_item_chat_right_avatar"
        android:layout_width="@dimen/chat_avatar_size"
        android:layout_height="@dimen/chat_avatar_size"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@drawable/ic_test_avater" />

    <TextView
        android:gravity="end"
        android:id="@+id/id_item_chat_right_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toLeftOf="@id/id_item_chat_right_avatar"
        android:text="Hi" />
</RelativeLayout>
